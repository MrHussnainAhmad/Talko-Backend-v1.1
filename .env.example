# Server Configuration
PORT=3000
NODE_ENV=development

# Database Configuration
MONGODB_URI=mongodb://localhost:27017/talkora

# JWT Configuration
JWT_SECRET=your_jwt_secret_here

# Email Configuration (for Nodemailer)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your_email@gmail.com
EMAIL_PASS=your_app_password

# Cloudinary Configuration
CLOUDINARY_CLOUD_NAME=your_cloud_name
CLOUDINARY_API_KEY=your_api_key
CLOUDINARY_API_SECRET=your_api_secret

# Firebase Configuration for Push Notifications
ENABLE_PUSH_NOTIFICATIONS=false
FIREBASE_PROJECT_ID=your_firebase_project_id
FIREBASE_SERVICE_ACCOUNT_PATH=./config/firebase-service-account.json

# Notification Feature Toggles (Phase 2)
# Core notification features
ENABLE_SOCKET_NOTIFICATIONS=true
ENABLE_OFFLINE_PUSH_NOTIFICATIONS=true
STORE_UNDELIVERED_NOTIFICATIONS=true

# Notification types - granular control
ENABLE_MESSAGE_NOTIFICATIONS=true
ENABLE_FRIEND_REQUEST_NOTIFICATIONS=true
ENABLE_FRIEND_ACCEPTED_NOTIFICATIONS=true
ENABLE_ACCOUNT_NOTIFICATIONS=true

# Development and monitoring
ENABLE_NOTIFICATION_METRICS=false
NOTIFICATION_BACKWARD_COMPATIBILITY=false

# Frontend URLs
FRONTEND_URL=https://talkora-web-frontend-v1.vercel.app
LOCAL_FRONTEND_URL=http://localhost:5173
