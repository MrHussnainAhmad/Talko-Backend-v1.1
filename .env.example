# Server Configuration
PORT=5001
NODE_ENV=development

# Database Configuration
MONGODB_URI=mongodb://localhost:27017/talkora
# or for cloud MongoDB
# MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/talkora

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-here

# Environment
NODE_ENV=development

# Cloudinary Configuration (for image uploads)
CLOUDINARY_CLOUD_NAME=your-cloudinary-cloud-name
CLOUDINARY_API_KEY=your-cloudinary-api-key
CLOUDINARY_API_SECRET=your-cloudinary-api-secret

# Email Configuration (for verification emails)
EMAIL_FROM=noreply@talkora.com
EMAIL_USER=your-smtp-username
EMAIL_PASS=your-smtp-password
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587

# FCM Configuration (Firebase Cloud Messaging)
FIREBASE_SERVICE_ACCOUNT_PATH=config/firebase-service-account.json
FIREBASE_PROJECT_ID=your-firebase-project-id

# Notification Feature Toggles
ENABLE_PUSH_NOTIFICATIONS=true
ENABLE_SOCKET_NOTIFICATIONS=true
ENABLE_MESSAGE_NOTIFICATIONS=true
ENABLE_FRIEND_REQUEST_NOTIFICATIONS=true
ENABLE_FRIEND_ACCEPTED_NOTIFICATIONS=true
ENABLE_ACCOUNT_NOTIFICATIONS=true
ENABLE_OFFLINE_PUSH_NOTIFICATIONS=true
STORE_UNDELIVERED_NOTIFICATIONS=true
ENABLE_NOTIFICATION_METRICS=true
NOTIFICATION_BACKWARD_COMPATIBILITY=false

# Port Configuration
PORT=5001

# CORS Configuration
CLIENT_URL=http://localhost:3000

# Development and monitoring
ENABLE_NOTIFICATION_METRICS=false
NOTIFICATION_BACKWARD_COMPATIBILITY=false

# Frontend URLs
FRONTEND_URL=https://talkora-web-frontend-v1.vercel.app
LOCAL_FRONTEND_URL=http://localhost:5173
